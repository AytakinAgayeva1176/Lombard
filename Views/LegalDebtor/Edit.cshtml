@model Lombard.Domain.Entities.LegalDebtor

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RecordStatus" />
    <input type="hidden" asp-for="CreateAt" />
    <input type="hidden" asp-for="UserId" />


    <div class="main-form-holder-inside-page-cont d-f">
        <div class="label-holder-inside-form-holder d-f">
            <p class="f-s-24 f-w-bold"
               id="PageIndicator" data-page="Hüquqi Borcalan" data-indicator="Hüquqi Borcalanın detallarını düzənləyirsiniz">Hüquqi borcalanı düzənlə</p>
        </div>

        <div class="form-part-inside-form-holder d-f">
            <div class="label-row-inside-form-part d-f">
                <p class="f-s-18 f-w-bold">Şəxsi məlumatlar</p>
            </div>
            <div class="input-row-inside-form-part d-g">
                <div class="input-holder-with-label d-f">
                    <label asp-for="Name" class="f-s-14 f-w-500">Şirkət adı</label>
                    <input asp-for="Name" type="text" id="Name" required
                           oninvalid="this.setCustomValidity('Borcalanın adını yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="VOEN" class="f-s-14 f-w-500">VÖEN</label>
                    <input asp-for="VOEN" type="text" id="VOEN" required
                           oninvalid="this.setCustomValidity('Vöeni yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="RegisteredAddress" class="f-s-14 f-w-500">Qeydiyyat ünvanı</label>
                    <input asp-for="RegisteredAddress" type="text" id="RegisteredAddress" required
                           oninvalid="this.setCustomValidity('Borcalanın qeydiyyat ünvanını yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="CurrentLivingAddress" class="f-s-14 f-w-500">Faktiki yaşayış ünvanı</label>
                    <input asp-for="CurrentLivingAddress" type="text" id="CurrentLivingAddress" required
                           oninvalid="this.setCustomValidity('Borcalanın faktiki yaşayış ünvanını yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
            </div>
        </div>

        <div class="form-part-inside-form-holder d-f">
            <div class="label-row-inside-form-part d-f">
                <p class="f-s-18 f-w-bold">Fəaliyyət sahəsi məlumatları</p>
            </div>
            <div class="input-row-inside-form-part d-g">
                <div class="input-holder-with-label d-f align-center f-center">
                    <label asp-for="IsResident" class="f-s-14 f-w-500">Status</label>
                    <input class="form-check-input" asp-for="IsResident" />
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="BusinessArea" class="f-s-14 f-w-500">Fəaliyyət Sektoru</label>
                    <select asp-for="BusinessArea" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["BusinessAreas"]"></select>
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="RegistrationStatus" class="f-s-14 f-w-500">Qeydiyyat Statusu</label>
                    <select asp-for="RegistrationStatus" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["RegistrationStatuses"]"></select>
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="City" class="f-s-14 f-w-500">Şəhər</label>
                    <select asp-for="City" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["Cities"]"></select>
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="HeadAccountant" class="f-s-14 f-w-500">Baş Mühasib</label>
                    <input asp-for="HeadAccountant" type="text" id="HeadAccountant" required
                           oninvalid="this.setCustomValidity('Baş mühasibi yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="DirectorName" class="f-s-14 f-w-500">Direktor</label>
                    <input asp-for="DirectorName" type="text" id="DirectorName" required
                           oninvalid="this.setCustomValidity('Direktoru yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
            </div>
        </div>

        <div class="form-part-inside-form-holder d-f">
            <div class="input-holder-with-label d-f">
                <label asp-for="Description" class="f-s-14 f-w-500">Qeyd</label>
                <textarea rows="5" asp-for="Description"></textarea>
            </div>
        </div>

        <div class="form-part-inside-form-holder d-f">
            <div class="label-row-inside-form-part d-f">
                <p class="f-s-18 f-w-bold">Əlaqə məlumatları</p>
            </div>
            <div class="input-row-inside-form-part d-g">
                <div class="input-holder-with-label d-f">
                    <label asp-for="MobileNumber" class="f-s-14 f-w-500">Mobil telefonu</label>
                    <input asp-for="MobileNumber" type="tel" id="MobileNumber" class="custom_phone_number" required minlength="9" maxlength="14"
                           oninvalid="this.setCustomValidity('Borcalanın mobil telefonunu yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="Phone" class="f-s-14 f-w-500">Ev telefonu</label>
                    <input asp-for="Phone" type="tel" id="Phone" required
                           oninvalid="this.setCustomValidity('Borcalanın ev telefonunu yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
                <div class="input-holder-with-label d-f">
                    <label asp-for="Email" class="f-s-14 f-w-500">Email</label>
                    <input asp-for="Email" type="email" id="Email"
                           oninvalid="this.setCustomValidity('Email ünvanını yazın')"
                           oninput="this.setCustomValidity('')">
                </div>
            </div>
        </div>

        <!--Empty space div starts here-->
        <div class="empty-space-div-50"></div>
        <!--Empty space div ends here-->

        <div class="button-holder-inside-modal-form d-f">
            <a asp-action="Cancel" class="red-submit-button-inside-form t-d-n"
               asp-route-returnUrl="@ViewData["returnUrl"]">Ləğv et</a>

            <button type="submit"  asp-route-returnUrl="@ViewData["returnUrl"]"  class="green-submit-button-inside-form">Təsdiqlə</button>
        </div>
    </div>
</form>

<!--Empty space div starts here-->
<div class="empty-space-div-50"></div>
<!--Empty space div ends here-->
